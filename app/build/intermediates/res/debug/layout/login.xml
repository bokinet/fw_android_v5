<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/login_back_color" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:id="@+id/linearLayout" android:gravity="center"
        android:background="#e74c3a">
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo_fieldwork" android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp" android:background="@drawable/logo_fieldwork"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:paddingTop="50dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <!-- android:layout_below="@+id/rlTopbar" -->


        <!-- <TextView -->
        <!-- android:id="@+id/txtLogin" -->
        <!-- style="@style/dark_gray_text" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginTop="20dp" -->
        <!-- android:text="@string/please_log_in" /> -->

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/username_hint"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="18dip" >
        </EditText>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUsername"
            android:layout_marginTop="20dip"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="18dip" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtPassword"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3c4248"
            android:layout_marginTop="30dp"
            android:text="@string/title_login"
            android:background="@drawable/custion_bag_login" />
    </RelativeLayout>

